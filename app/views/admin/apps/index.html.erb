<%= link_to 'Add App', new_admin_app_path, class: 'btn' %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @apps.each do |app| %>
    <tr>
      <td><%= link_to app.name, admin_app_path(app) %></td>
      <td><%= app.url %></td>
      <td>
        <%= link_to 'Edit', edit_admin_app_path(app) %>
        <%= link_to 'Delete', admin_app_path(app), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
